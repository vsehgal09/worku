<p id="notice"><%= notice %></p>

<h1>Videos</h1>

<table>
  <thead>
    <tr>
      <th>Wistia</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.wistia %></td>
        <td><%= video.title %></td>
        <td><%= video.description %></td>

        <!-- SHOW REGULAR GREEN BUTTON - MATERIALIZE -->
        <td><%= link_to 'Show', video, :class =>"btn waves-effect waves-light" %></td>

        <!-- EDIT ICON BUTTON MATERIALIZE -->
        <td><%= link_to edit_video_path(video) do %>
          <i class="material-icons">edit</i>
        <%end%>
        </td>
        <!-- DELETE ICON BUTTON  -->
        <td><%= link_to video, method: :delete, data: { confirm: 'Are you sure?'} do %>
        <i class="material-icons">delete</i>
        <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Video', new_video_path %>
